{
    "agent":"twin_sac_q",
    "env_name" : "HalfCheetah-v2",
    "env":{
        "reward_scale":1,
        "obs_norm": true
    },
    "replay_buffer":{
        "size": 1e6,
        "time_limit_filter": true
    },
    "net":{ 
        "hidden_shapes": [400,300],
        "append_hidden_shapes":[]        
    },
    "policy":{
        "tanh_action": true
    },
    "collector":{
        "epoch_frames": 1000,
        "max_episode_frames": 1000,
        "eval_episodes": 1
    },
    "general_setting": {
        "discount" : 0.99,
        "pretrain_epochs" : 2,
        "num_epochs" : 3000,

        "batch_size" : 256,

        "target_hard_update_period" : 1000,
        "use_soft_update" : true,
        "tau" : 0.005,
        "opt_times" : 1000
    },
    "twin_sac_q":{
        "plr" : 3e-4,
        "qlr" : 3e-4,

        "reparameterization": true,
        "automatic_entropy_tuning": true
    }
}